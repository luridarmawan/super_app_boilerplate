# Environment Configuration
# Copy this file to .env and fill in your values

ENVIRONMENT=production
APP_NAME="Super App"
APP_DESCRIPTION="A Super App Project"
APP_TAGLINE="Your All-in-One Solution"
API_BASE_URL=https://your_ip_production/
API_BASE_URL_DEVELOPMENT=https://your_ip_staging_development/

API_GOOGLE_AUTH_VERIFICATION="http://your_api_url/auth/google/"

# Google OAuth Client ID
# Get from Google Cloud Console: https://console.cloud.google.com/
# Use the Web Client ID (not Android Client ID)
ENABLE_GOOGLE_LOGIN=true
GOOGLE_CLIENT_ID="your_google_client_id"
ENABLE_DUMMY_LOGIN=true

# AUTH  PROVIDER
# firebase / customApi
AUTH_PROVIDER="customApi"

# NOTIFICATION PROVIDER
# 'firebase', 'onesignal', 'mock'
NOTIFICATION_PROVIDER="mock"

ONESIGNAL_APP_ID="YOUR_ONESIGNAL_APP_ID"

# ============================================
# API ENDPOINT
# ============================================
API_ENDPOINT_LOGIN="/o/auth/login/"
API_ENDPOINT_REFRESH_TOKEN="/o/auth/token/"
API_ENDPOINT_LOGOUT="/o/auth/logout/"
API_ENDPOINT_REGISTER="/o/auth/register/"
API_ENDPOINT_FORGOT_PASSWORD="/o/auth/forgot-password/"
API_ENDPOINT_RESET_PASSWORD="/o/auth/reset-password/"
API_ENDPOINT_VERIFY_TOKEN="/o/auth/verify-token/"

# Reverse geocoding URL - use {lat} and {lon} as placeholders
# Leave empty to disable address lookup
# Example: https://nominatim.openstreetmap.org/reverse?format=json&lat={lat}&lon={lon}
GPS_REVERSE_GEO_URL="https://nominatim.openstreetmap.org/reverse?format=json&lat={lat}&lon={lon}"

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SPLASH_SCREEN=false
ENABLE_QRSCANNER=true
ENABLE_CAMERA_CAPTURE=true
ENABLE_GALLERY_UPLOAD=true
ENABLE_NOTIFICATION=true
ENABLE_NOTIFICATION_BANNER=false
ENABLE_DANGER_ZONE=true
ENABLE_DELETE_ACCOUNT=true
ENABLE_GPS=true

# ============================================
# MODULE FLAGS
# ============================================
# Enable/disable pluggable modules
# Set to 'true' to enable a module, 'false' to disable
# Modules must also be registered in main.dart to work

# Sample module (for demonstration)
ENABLE_MODULE_SAMPLE=true
ENABLE_MODULE_DEMO=true

# Add your custom modules here:
# ENABLE_MODULE_NEWS=true
# ENABLE_MODULE_ECOMMERCE=true
# ENABLE_MODULE_CHAT=false
# ENABLE_MODULE_PAYMENT=true
# ENABLE_MODULE_BOOKING=false

SUPPORT_EMAIL="support@yourdomain.com"
SUPPORT_PHONE="+62 890 1234 567"

# Default theme on first app run
# Options: defaultBlue, modernPurple, elegantGreen, warmOrange, sweetBrown, darkMode
THEME_DEFAULT=

# ============================================
# APP ICONS & SPLASH
# ============================================
# png only, recommended size: 1024x1024
#
# To generate launcher icons from LAUNCHER_ICON:
#   dart run tool/generate_launcher_icons.dart
#
# To generate splash screen from SPLASH_LOGO:
#   dart run flutter_native_splash:create
#
LAUNCHER_ICON="assets/images/logo/carik_blue_logo.png"
SPLASH_LOGO="assets/images/logo/carik_blue_logo.png"
SPLASH_BACKGROUND="https://api.carik.id/files/images/kpbi/kpbi-01.jpg"
DEFAULT_AVATAR="assets/images/default_avatar.png"

SPLASH_SHOW_COUNT=5
SPLASH_DURATION=5
# 24 jam
SPLASH_DELAY=24
# SPLASH_GRADIENT_START="#1E88E5"
# SPLASH_GRADIENT_MIDDLE="#42A5F5"
# SPLASH_GRADIENT_END="#90CAF9"
SPLASH_GRADIENT_START="#5D4037"
SPLASH_GRADIENT_MIDDLE="#8B6914"
SPLASH_GRADIENT_END="#D4A537"

# ============================================
# CONTENT LINK
# ============================================
BANNER_API_URL="https://api.carik.id/dummy/banner.json"
ARTICLE_API_URL="https://api.carik.id/dummy/article.json"

# Demo/Testing Configuration
USERNAME_DEFAULT=
PASSWORD_DEFAULT=

# ============================================
# BRANDING - COMPANY INFO
# ============================================
COMPANY_NAME="PT. Super Tech"
WEBSITE_URL="https://example.com"

# ============================================
# BRANDING - SOCIAL LINKS
# ============================================
# Leave empty if not used
PLAY_STORE_URL=
APP_STORE_URL=
FACEBOOK_URL=
INSTAGRAM_URL=
TWITTER_URL=
LINKEDIN_URL=

# ============================================
# BRANDING - LEGAL
# ============================================
TERMS_URL="https://example.com/terms"
PRIVACY_URL="https://example.com/privacy"
COPYRIGHT_TEXT=
